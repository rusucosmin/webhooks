- if resource.errors.any?
  .bg-red-100.border-t-4.border-red-500.rounded-b.text-red-900.px-4.py-3.shadow-md{:role => "alert"}
    .flex
      %div
        %p.font-bold= I18n.t("errors.messages.not_saved",
          count: resource.errors.count,
          resource: resource.class.model_name.human.downcase)
        %p.text-sm
          %ul
          - resource.errors.full_messages.each do |message|
            %li= message
