= render "partials/nav"

.w-full.max-w-lg.mx-auto.m-5
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8" } ) do |f|
    %h2.text-lg Your Account
    = render "devise/shared/error_messages", resource: resource
    .mb-6
      = f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2"
      = f.text_field :first_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
    .mb-6
      = f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2"
      = f.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
    .mb-6
      = f.label :school_name, class: "block text-gray-700 text-sm font-bold mb-2"
      = f.text_field :school_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
    .mb-4
      = f.label :email, class: "block text-gray-700 text-sm font-bold mb-2"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "john@doe.com"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div.text-sm
          = "Currently waiting confirmation for: #{resource.unconfirmed_email}"
    .mb-6
      = f.label :password, class: "block text-gray-700 text-sm font-bold mb-2"
      %i (leave blank if you don't want to change it)
      = f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "******************"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br/
      .mb-6
        = f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2"
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "******************"
    .mb-6
      = f.label :current_password, class: "block text-gray-700 text-sm font-bold mb-2"
      = f.password_field :current_password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "******************"
      %i (we need your current password to confirm your changes)
    .flex.items-center.justify-between
      = f.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-non e focus:shadow-outline"

